<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tutorials.hackro.com.prototipopagossfa.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
            android:layout_marginRight="@dimen/activity_horizontal_margin_small">



            <!-- *********************************************  -->

            <include
                android:id="@+id/dataDescription"
                layout="@layout/data_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                >


            </include>


            <View
                android:id="@+id/div_dataDescription"
                style="@style/Divider"
                android:layout_below="@+id/dataDescription"
                />

            <!-- *********************************************  -->


            <include
                android:id="@+id/dataPersonal"
                layout="@layout/data_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/div_dataDescription"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                />

            <View
                android:id="@+id/div_dataPersonal"
                style="@style/Divider"
                android:layout_below="@+id/dataPersonal"
                />


            <!-- *********************************************  -->


            <include
                android:id="@+id/dataCurpRfc"
                layout="@layout/data_curp_rfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/div_dataPersonal"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                />
            <View
                android:id="@+id/div_dataCurpRfc"
                style="@style/Divider"
                android:layout_below="@+id/dataCurpRfc"
                />

            <!-- *********************************************  -->
            <include
                android:id="@+id/dataDirection"
                layout="@layout/data_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dataCurpRfc"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                />

            <View
                android:id="@+id/div_dataDirection"
                style="@style/Divider"
                android:layout_below="@+id/dataDirection"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:id="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/div_dataDirection"
                />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
